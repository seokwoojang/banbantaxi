<% layout('layout/boilerplate') %>
<style>
  .card {
    border-radius: 6px;
    box-shadow: 0px 1px 2px #888;
    margin-bottom: 20px;
  }

  .card img {
    border-radius: 6px 0 0 6px;
  }

  .card-body {
    padding: 20px;
  }

  .card-title {
    font-size: 24px;
    font-weight: bold;
  }

  .card-text {
    font-size: 16px;
    color: #555;
  }

  .btn-primary {
    background-color: #0056b3;
    border-color: #0056b3;
    border-radius: 2em;
    padding: 12px 28px;
    font-size: 16px;
  }

  .btn-primary:hover {
    background-color: #004494;
    border-color: #004494;
  }

  .btn-link {
    display: inline-block;
    margin-top: 20px;
    padding: 12px 28px;
    text-align: center;
    text-decoration: none;
    font-size: 16px;
    margin: 4px 2px;
    cursor: pointer;
    border-radius: 2em;
    background-color: #28a745;
    color: white;
  }

  .btn-link:hover {
    background-color: #218838;
  }
</style>
<div style="display: flex; justify-content: space-between; align-items: center">
  <h1>지도 보기</h1>
  <form method="GET" action="/support/search">
    <input type="text" name="search" placeholder="장소 검색" />
    <button type="submit">검색</button>
  </form>
</div>
<% if (maplist.length === 0) { %>
<p>검색 결과가 없습니다.</p>
<% } else { %> <% for (let list of maplist) { %>
<div class="card">
  <div class="row g-0">
    <div class="col-md-4">
      <img
        src="<%= list.images[0].url %>"
        class="img-fluid rounded-start"
        alt="<%= list.location %>"
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= list.location %></h5>
        <p class="card-text"><%= list.description %></p>
        <a href="/support/<%= list._id %>" class="btn btn-primary"
          >자세히 보기</a
        >
      </div>
    </div>
  </div>
</div>
<% } %> <% } %>

<div class="text-center">
  <a href="/support/new" class="btn-link">New Map</a>
  <a href="/" class="btn-link">이전 페이지</a>
</div>
