<% layout('layout/boilerplate') %>
  <div class="row">
    <h1 class="text-center">지도 편집</h1>
    <div class="col-6 offset-3">
      <form action="/support/<%= map._id %>?_method=put" method="post" novalidate class="validated-form"
        enctype="multipart/form-data">
        <div class="mb-3">
          <label for="location" class="form-label">위치</label>
          <input class="form-control" type="text" name="map[location]" id="location" placeholder="location"
            value="<%= map.location %>" required />
          <div class="valid-feedback">Looks good!</div>
        </div>
        <!-- <div class="mb-3">
          <label for="image" class="form-label">이미지</label>
          <input type="file" name="image" id="image" multiple>
        </div> -->
        <div class="mb-3">
          <label class="form-label" for="description">설명</label>
          <textarea class="form-control" name="map[description]" id="description" cols="30" rows="5" required>
<%= map.description %></textarea>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="mb-3">
          <div class="form-file custom-file">
            <input type="file" class="form-file-input" id="image" name="image" multiple>
            <label class="form-file-label" for="image">
              <span class="form-file-text custom-file-label">이미지</span>
              <span class="form-file-button">Browse</span>
            </label>
          </div>
        </div>
        <div class="mb-3">
          <% map.images.forEach(function(img, i){ %>
            <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
            <div class="form-check-inline">
              <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename %>">
            </div>
            <label for="image-<%=i%>">삭제?</label>
            <% }) %>
        </div>
        <div class="mb-3">
          <button class="btn btn-success">Submit</button>
        </div>
      </form>
      <a href="/support/<%= map._id %>">취소</a>
    </div>
  </div>