<% layout('layout/boilerplate') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card mb-3">
                <img src="<%= map.image %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= map.location %>
                    </h5>
                    <p class="card-text">
                        <%= map.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">An item</li>
                    <li class="list-group-item">A second item</li>
                    <li class="list-group-item">A third item</li>
                </ul>
                <div class="card-body">
                    <a href="/support/<%= map._id %>/edit" class="card-link btn btn-warning">지도 편집</a>
                    <form class="d-inline" action="/support/<%= map._id %>?_method=delete" method="post">
                        <button class="btn btn-danger">삭제</button>
                    </form>
                </div>
                <div class="card-footer text-muted">
                    <a href="/support" class="">이전 페이지</a>
                </div>
            </div>
        </div>
    </div>