<% layout('layout/boilerplate') %>
    <div class="row">
        <h1 class="text-center">지도 편집</h1>
        <div class="col-6 offset-3">
            <form action="/support/<%= map._id %>?_method=put" method="post">
                <div class="mb-3">
                    <label for="location" class="form-label">위치</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="location"
                        value="<%= map.location %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">이미지</label>
                    <input class="form-control" type="text" name="image" id="image" placeholder="image"
                        value="<%= map.image %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">설명</label>
                    <textarea class="form-control" name="description" id="description" cols="30"
                        rows="5"><%= map.description %></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>

            </form>
            <a href="/support/<%= map._id %>">취소</a>
        </div>
    </div>